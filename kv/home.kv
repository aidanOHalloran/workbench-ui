<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 40

        Label:
            text: "[u]Workbench Info System[/u]"
            markup: True
            font_size: 80
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + 20

        ScrollView:
            size_hint_y: 1

            GridLayout:
                cols: 2
                spacing: 20
                padding: 10
                size_hint_y: None
                height: self.minimum_height  # critical for ScrollView
                row_default_height: 120
                row_force_default: True

                Button:
                    text: "View Projects"
                    font_size: 45
                    on_release: app.root.current = 'projects'
                Button:
                    text: "View Weather Forecast"
                    font_size: 45
                    on_release: app.root.current = 'weatherMenu'
                Button:
                    text: "Whiteboard"
                    font_size: 45
                    on_release: app.root.current = 'whiteboard'
                Button:
                    text: "Shopping List"
                    font_size: 45
                    on_release: print('Selected: Shopping List')
                Button:
                    text: "Unit Converter"
                    font_size: 45
                    on_release: print('Selected: Unit Converter')
                Button:
                    text: "For Fun"
                    font_size: 45
                    on_release: print('Selected: For Fun')
                # Add more buttons here â€” it will scroll!