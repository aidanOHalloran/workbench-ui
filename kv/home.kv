<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 40

        Label:
            text: "Workbench Info System"
            font_size: 60
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + 20

        Button:
            text: "View Projects"
            font_size: 45
            on_release: app.root.current = 'projects'

        Button:
            text: "Placeholder 1"
            font_size: 45
            on_release: print('Selected: Placeholder 1')

        Button:
            text: "Placeholder 2"
            font_size: 45
            on_release: print('Selected: Placeholder 2')

        Button:
            text: "Placeholder 3"
            font_size: 45
            on_release: print('Selected: Placeholder 3')

