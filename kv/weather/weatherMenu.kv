<WeatherMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 30

        FloatLayout:
            size_hint_y: None
            height: 80

            Label:
                text: "[u]Weather Menu[/u]"
                markup: True
                font_size: 60
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "Todays Forecast"
            font_size: 45
            on_release: app.root.current = 'todaysForecast'

        Button:
            text: "5 Day Forecast"
            font_size: 45
            on_release: app.root.current = 'fiveDayForecast'

        Button:
            text: "Back"
            font_size: 40
            size_hint_y: None
            height: 60
            on_release:
                app.root.current = 'home'