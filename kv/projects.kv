<ProjectsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 30

        Label:
            text: "My Projects"
            font_size: 60
            size_hint_y: None
            height: self.texture_size[1] + 20

        Button:
            text: "Current Projects"
            font_size: 45
            on_release: app.root.current = 'currentProjects'

        Button:
            text: "Planned Projects"
            font_size: 45
            on_release: app.root.current = 'plannedProjects'

        Button:
            text: "Past Projects"
            font_size: 45
            on_release: app.root.current = 'pastProjects'

        Button:
            text: "Back"
            font_size: 40
            size_hint_y: None
            height: 60
            on_release:
                app.root.current = 'home'
