<NumberPad>:
    orientation: 'vertical'
    spacing: 10

    TextInput:
        text: root.text
        font_size: 35
        multiline: False
        readonly: True
        halign: 'right'
        size_hint_y: None
        height: '60dp'

    GridLayout:
        cols: 3
        spacing: 8
        size_hint_y: None
        height: self.minimum_height

        Button:
            text: '1'
            on_release: root.insert_char('1')
        Button:
            text: '2'
            on_release: root.insert_char('2')
        Button:
            text: '3'
            on_release: root.insert_char('3')

        Button:
            text: '4'
            on_release: root.insert_char('4')
        Button:
            text: '5'
            on_release: root.insert_char('5')
        Button:
            text: '6'
            on_release: root.insert_char('6')

        Button:
            text: '7'
            on_release: root.insert_char('7')
        Button:
            text: '8'
            on_release: root.insert_char('8')
        Button:
            text: '9'
            on_release: root.insert_char('9')

        Button:
            text: '.'
            on_release: root.insert_char('.') if '.' not in root.text else None
        Button:
            text: '0'
            on_release: root.insert_char('0')
        Button:
            text: 'âŒ«'
            on_release: root.backspace()

    BoxLayout:
        spacing: 10
        size_hint_y: None
        height: '50dp'

        Button:
            text: 'Clear'
            on_release: root.clear()
        Button:
            text: 'Done'
            on_release: root.done()
