<PlannedProjectsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 30

        Label:
            text: "Planned Projects"
            font_size: 60
            size_hint_y: None
            height: self.texture_size[1] + 20

        ScrollView:
            GridLayout:
                id: planned_project_list
                cols: 1
                spacing: 20
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                row_default_height: 100
                row_force_default: True

        Button:
            text: "Back"
            size_hint_y: None
            height: 60
            font_size: 40
            on_release:
                app.root.current = 'projects'
