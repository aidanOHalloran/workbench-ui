<CurrentProjectsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 30

        Label:
            text: "Current Projects"
            font_size: 60
            size_hint_y: None
            height: self.texture_size[1] + 20

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: current_project_list
                cols: 1
                spacing: 20
                size_hint_y: None
                height: self.minimum_height
                padding: [10, 10]

        Button:
            text: "Back"
            size_hint_y: None
            height: 60
            font_size: 40
            on_release:
                app.root.current = 'projects'
