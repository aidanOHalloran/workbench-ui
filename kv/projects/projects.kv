<ProjectsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 30

        FloatLayout:
            size_hint_y: None
            height: 80

            Label:
                text: "[u]My Projects[/u]"
                markup: True
                font_size: 60
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Button:
                text: "Add Project"
                font_size: 30
                size_hint: None, None
                size: 180, 60
                pos_hint: {"right": 0.98, "center_y": 0.5}
                on_release: app.root.current = 'addProjectPage'

        Button:
            text: "Current Projects"
            font_size: 45
            on_release: app.root.current = 'currentProjects'

        Button:
            text: "Planned Projects"
            font_size: 45
            on_release: app.root.current = 'plannedProjects'

        Button:
            text: "Past Projects"
            font_size: 45
            on_release: app.root.current = 'pastProjects'

        Button:
            text: "Back"
            font_size: 40
            size_hint_y: None
            height: 60
            on_release:
                app.root.current = 'home'
